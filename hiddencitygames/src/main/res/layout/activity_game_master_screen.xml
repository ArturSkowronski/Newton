<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:awesome="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hiddencity.games.screens.PlayerScreen">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical"
        android:layout_weight="1">
    <com.hiddencity.games.ui.HiddenTextView
        android:layout_marginTop="20dp"

        android:text="Kod twojej gry to:"
        android:textSize="22sp"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />


    <com.hiddencity.games.ui.HiddenBoldLabel
        android:id="@+id/gameCode"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content" />


    <com.hiddencity.games.ui.HiddenTextView android:text="przekaż go pozostałym graczom, aby mogli dołączyć do gry"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:textSize="22sp"

        android:layout_height="wrap_content" />
    </LinearLayout>

    <com.hiddencity.games.ui.HiddenAndroidButton
        android:id="@+id/joinGame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="dołącz do gry"
        android:textAllCaps="false"
        android:padding="10dp"
        android:layout_margin="40dp"
        android:layout_marginTop="0dp"

        />
</LinearLayout>
